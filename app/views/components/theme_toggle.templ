package components

import (
	"github.com/FrancescoLuzzi/AQuickQuestion/app/views/icons"
	"github.com/FrancescoLuzzi/AQuickQuestion/app/views/ui"
)

templ ThemeToggle() {
	<label class="swap swap-rotate">
		<input type="checkbox" @click="toggleTheme" :checked="theme === 'dark'"/>
		@icons.LightIcon(ui.Class("swap-on size-6"))
		@icons.DarkIcon(ui.Class("swap-off size-6"))
	</label>
}
